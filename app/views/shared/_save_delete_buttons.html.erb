<input id="_method" name="_method" type="hidden" value="put" />

<script type="text/javascript">
function go(p) { 
   m = document.getElementById('_method');
   m.value = p;
}
</script>

<div style="height: 50px;">
  <div style="float: left;"> 
    <input class="<%= save_class %>" name="commit" 
    type="submit" value="Save" onClick="go('put');" /> 
  </div> 
  <div style="float: left; margin-left: 30px"> 
    <input class="delete_button" data-confirm="Are you sure?" 
    type="submit" value="Delete" onClick="go('delete');" />
  </div> 
</div> 